<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chajiu.bangbangbe.Mapper.AddressMapper">
    <select id="listaddress" resultType="Address">
        select * from address
    </select>
    <select id="selectbyId" resultType="Address" parameterType="int">
        select * from address where id=#{id}
    </select>
    <select id="selectbyUserId" resultType="Address" parameterType="int">
        select * from address where user_id=#{id}
    </select>
    <insert id="insertuserId" parameterType="int">
        insert into address(user_id) values(#{user_id})
    </insert>
    <update id="updateAddressbyUserId">
        update address set address=#{address} where user_id=#{user_id}
    </update>
    <delete id="deletebyUserId" parameterType="int">
        delete from address where user_id=#{user_id}
    </delete>
</mapper>