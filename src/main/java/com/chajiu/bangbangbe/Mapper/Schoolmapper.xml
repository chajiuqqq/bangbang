<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chajiu.bangbangbe.Mapper.SchoolMapper">
    <select id="listschool" resultType="School">
        select * from school
    </select>
    <select id="selectbyId" resultType="School" parameterType="int">
        select * from school where id=#{id}
    </select>
    <select id="selectbyName" resultType="School" parameterType="String">
        select * from school where name=#{name}
    </select>
    <insert id="insertname" parameterType="String">
        insert into school(name) values (#{name})
    </insert>
    <update id="updatenamebyId">
        update school set name=#{name} where id=#{id}
    </update>
    <delete id="deletebyId" parameterType="int">
        delete from school where id=#{id}
    </delete>
</mapper>