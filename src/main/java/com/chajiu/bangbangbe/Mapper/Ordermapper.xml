<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chajiu.bangbangbe.Mapper.OrderMapper">
    <select id="listorder" resultType="Order">
        select * from orders
    </select>
    <select id="selectbyId" resultType="Order" parameterType="int">
        select * from orders where id=#{id}
    </select>
    <select id="selectbyOrderId" resultType="Order" parameterType="String">
        select * from orders where order_id=#{OrderId}
    </select>
    <insert id="insertOrderId" parameterType="String">
        insert into Orders(order_id) values(#{OrderId})
    </insert>
    <update id="updateAddressbyOrderId">
        update orders set address=#{address} where order_id=#{order_id}
    </update>
    <delete id="deletebyOrderId" parameterType="String">
        delete from orders where order_id=#{order_id}
    </delete>
</mapper>